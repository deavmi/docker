{
	http_port "80"

	log default {
			output stdout
			level INFO
	}

	metrics {
		per_host
	}
}

# Domain name for automatic SSL
:80 {

  # Handle metrics
	handle /metrics {
	    metrics
	}

	# Grafana web interface
	handle /grafana* {
		reverse_proxy grafana:3000
	}	

	# Prometheus web interface
	handle /prometheus* {
		reverse_proxy prometheus:9090
	}
}
