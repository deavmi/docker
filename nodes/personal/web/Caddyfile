
{
	http_port "80"
	https_port "443"

	log default {
			output stdout
			level DEBUG
	}
}


# Domain name for automatic SSL
:80 {
# :80, :443 {
# {$DOMAIN}:80, {$DOMAIN}:443 {

	# respond "Hello there"

	# Handle metrics
	handle /metrics {
	    metrics
	}

	# Serve index.html's on any path
	# and with a root of files from
	# /webroot

	# Sets the root of where we look
	# for files (with relative paths)
	root * /webroot

	# Serve root
	handle * {
		file_server
	}
	
	# If you hit this then display
	# an HTML file browser
	handle /files* {
		file_server browse
	}

	handle /kaka* {
		file_server browse
	}

	# TODO: sub-path or reqwrite thing may be neede idk
	handle /quassel* {
		reverse_proxy quassel-web:64080
	}

	# Gitea service
	handle /git* {
		reverse_proxy services.deavmi.assigned.network
	}
}
